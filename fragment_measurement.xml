<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v7.widget.CardView
        android:id="@+id/cvRealTimeData"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_aspectRatio="740%"
        app:layout_heightPercent="30%"
        app:layout_marginBottomPercent="1%"
        app:layout_marginLeftPercent="2%"
        app:layout_marginRightPercent="2%"
        app:layout_marginTopPercent="2%"
        app:layout_widthPercent="95%" >

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
			<LinearLayout 
			    android:id="@+id/textL1"
			    android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/y50"
                android:layout_marginLeft="@dimen/y50"
                android:background="@color/delta_gray_bg">
            <TextView
                android:id="@+id/rvRTData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/y34"
                android:text="@string/realtime_data"
                android:textColor="@color/theme_primary"
                android:textSize="@dimen/y40" >
            </TextView>
</LinearLayout>
            <TextView
                android:id="@+id/tvWaterTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textL1"
               	android:layout_marginTop="@dimen/y40"
               	android:layout_marginLeft="@dimen/x70"
                android:text="温度:"
                android:textColor="@color/textColor"
                android:textSize="@dimen/y40" >
            </TextView>

            <TextView
                android:id="@+id/tvWaterTemperatureValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rvRTData"
                android:layout_marginLeft="@dimen/x70"
                android:layout_toRightOf="@+id/tvWaterTemperature"
                android:textColor="@color/valueColor"
                android:textSize="@dimen/y40" >
            </TextView>

            <TextView
                android:id="@+id/tvDissolveOxygen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rvRTData"
                android:layout_toRightOf="@+id/tvWaterTemperatureValue"
                android:layout_alignTop="@id/tvWaterTemperature"
                android:layout_marginLeft="@dimen/x100"
                android:text="@string/dissolved_oxygen_ratio"
                android:textColor="@color/textColor"
                android:textSize="@dimen/y40" >
            </TextView>

            <TextView
                android:id="@+id/tvDissolveOxygenValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rvRTData"
                android:layout_marginLeft="@dimen/x20"
                android:layout_toRightOf="@+id/tvDissolveOxygen"
                android:textColor="@color/valueColor"
                android:textSize="@dimen/y40" >
            </TextView>

            <TextView
                android:id="@+id/tvPH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvWaterTemperature"
                android:layout_alignLeft="@id/tvWaterTemperature"
                android:layout_marginTop="@dimen/y70"
                android:text="@string/ph_value"
                android:textColor="@color/textColor"
                android:textSize="@dimen/y40" >
            </TextView>

            <TextView
                android:id="@+id/tvPHValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tvPH"
                android:layout_marginLeft="@dimen/x20"
                android:layout_toRightOf="@+id/tvPH"
                android:textColor="@color/valueColor"
                android:textSize="@dimen/y40" >
            </TextView>

            <TextView
                android:id="@+id/tvEletricConduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvWaterTemperature"
                android:layout_toRightOf="@id/tvPHValue"
                android:layout_alignTop="@id/tvPH"
               android:layout_marginLeft="@dimen/x100"
                android:text="@string/electricity_conduction_ratio"
                android:textColor="@color/textColor"
                android:textSize="@dimen/y40" >
            </TextView>

            <TextView
                android:id="@+id/tvEletricConductionValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvWaterTemperatureValue"
                android:layout_marginLeft="@dimen/x20"
                android:layout_toRightOf="@+id/tvEletricConduction"
                android:textColor="@color/valueColor"
                android:textSize="@dimen/y40" >
            </TextView>

            <!-- 盐度 -->

            <TextView
                android:id="@+id/tvNitrite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tvPH"
                android:layout_below="@+id/tvPH"
				android:layout_marginTop="@dimen/y70"
				android:layout_marginBottom="@dimen/y40"
                android:text="@string/nitrite"
                android:textColor="@color/textColor"
                android:textSize="@dimen/y40" >
            </TextView>

            <TextView
                android:id="@+id/tvNitriteValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDissolveOxygenValue"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/tvNitrite"
                app:layout_marginTopPercent="10%"
                android:textColor="@color/valueColor"
                android:textSize="@dimen/y40" />
        </android.support.percent.PercentRelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cvRealTimeDataChart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/cvRealTimeData"
        app:layout_aspectRatio="254%"
        app:layout_heightPercent="75%"
        app:layout_marginBottomPercent="2%"
        app:layout_marginLeftPercent="2%"
        app:layout_marginRightPercent="2%"
        app:layout_marginTopPercent="1%"
        app:layout_widthPercent="95%" >

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
		<LinearLayout 
		    android:id="@+id/textL2"
		     android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/y50"
                android:layout_marginLeft="@dimen/y50"
             android:background="@color/delta_gray_bg"
		    >
            <TextView
                android:id="@+id/rvRTDataChart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/y34"
                android:text="@string/realtime_data_chart"
                android:textColor="@color/theme_primary"
                android:textSize="@dimen/y40" >
            </TextView>
</LinearLayout>
            <!-- 感测数据 -->
            <LinearLayout
                android:id="@+id/lintext1"
				android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y40"
                android:layout_marginLeft="@dimen/y70"
                android:gravity="center_vertical"
                android:layout_below="@+id/textL2"
			>

            <TextView
                android:id="@+id/tvData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:text="@string/sensing_data"
                 
                android:textColor="@color/textColor"
                android:textSize="@dimen/y40" />
             <Spinner
                android:id="@+id/tvDataW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
               android:layout_alignBottom="@+id/check"
                android:layout_below="@+id/textL2"
                android:layout_toRightOf="@+id/tvData"
                android:textColor="@color/textColor"
                android:textSize="@dimen/y100" />
				</LinearLayout>
            <TextView
                android:id="@+id/baobiaoqujian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lintext1"
                android:layout_alignLeft="@id/lintext1"
                android:layout_marginTop="@dimen/y66"
                android:text="开始 :"
                android:textColor="@color/textColor"
                android:textSize="@dimen/y40" />

            <TextView
                android:id="@+id/date_time1"
                android:layout_width="@dimen/x321"
                android:layout_height="@dimen/y60"
                android:layout_below="@+id/tvData"
                android:layout_toRightOf="@+id/baobiaoqujian"
                android:layout_alignTop="@id/baobiaoqujian"
                 android:background="@drawable/border"
                android:drawableRight="@drawable/ic_triangle"
                android:gravity="center"
                android:paddingRight="3dp" />

            <TextView
                android:id="@+id/baobiaoqujianValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvData"
                android:layout_toRightOf="@+id/date_time1"
                android:layout_alignTop="@id/baobiaoqujian"
                android:text="结束 :"
                android:textColor="@color/textColor"
                android:textSize="@dimen/y40" />

            <TextView
                android:id="@+id/date_time2"
                  android:layout_width="@dimen/x321"
                android:layout_height="@dimen/y60"
                android:layout_below="@+id/tvData"
                android:layout_toRightOf="@+id/baobiaoqujianValue"
                android:layout_alignTop="@id/baobiaoqujian"
                android:background="@drawable/border"
                android:drawableRight="@drawable/ic_triangle"
                android:gravity="center"
                android:paddingRight="3dp" />
			<LinearLayout 
			    android:id="@+id/linBtn"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_below="@+id/baobiaoqujian"
			    android:gravity="center_horizontal"
			    >
            <Button
                android:id="@+id/check"
                style="@style/buttonStyle"
                android:layout_marginTop="@dimen/y60"
                android:text="查询"
                android:textColor="@color/white"
                android:textSize="@dimen/y40" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/linBtn"
                app:layout_marginBottomPercent="5%"
                app:layout_marginLeftPercent="5%"
                app:layout_marginRightPercent="5%"
                app:layout_marginTopPercent="5%" >

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/spread_line_chart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_marginTopPercent="10%"
                    android:orientation="vertical" />

                <ProgressBar
                    android:id="@+id/progress_loading"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:indeterminate="true" />

                <TextView
                    android:id="@+id/tv_nodate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="No data found"
                    android:textSize="@dimen/y24"
                    android:visibility="invisible" />
            </FrameLayout>

           

        </android.support.percent.PercentRelativeLayout>
    </android.support.v7.widget.CardView>

</android.support.percent.PercentRelativeLayout>